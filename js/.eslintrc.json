{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:promise/recommended",
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "script"
    },
    "rules": {
        "linebreak-style": "off",
        "import/prefer-default-export": "off",
        "promise/catch-or-return": [
            "error",
            {
                "allowFinally": true
            }
        ],
        "no-unused-vars": "off",
        "no-undef": "off"
    },
    "plugins": [
        "html",
        "promise"
    ],
    "settings": {
        "html/html-extensions": [".html"]
    },
    "globals": {
        "pyodide": true,
        "languagePluginLoader": true
    }
}
